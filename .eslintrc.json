{
  "extends": [
    "airbnb-base", 
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier/@typescript-eslint"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": false,
    "jest/globals": true
  },
  "settings": {
    "import/resolver": "webpack"
  },
  "rules": {
    "import/extensions": [
       "error",
       "ignorePackages",
       {
         "js": "never",
         "jsx": "never",
         "ts": "never",
         "tsx": "never"
       }
    ]
  },
  "plugins": [
    "jest"
  ]
}
